#include <string>

#include "lexer.h"
#include "start.h"

Lexer::Lexer(void) {
	tokens.clear();
	tokentext.clear();
	state = Lexstate::START;

}

Lexer::~Lexer(void) {

}

int Lexer::lex(std::string s) {

	line = s;

	Start startstate();

	return 0;
}


void Lexer::accept(void) {

	tokens.push_back(tokentext, state);

	pos++;

}

char Lexer::lookahead(void) {
	try {
		return line.at(pos + 1);
	} catch (std::out_of_range e) {
		return 0;
	}
}

